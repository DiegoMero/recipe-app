<h1>Shopping List</h1>
<div class='shopping-list-header'>
  <h3>Amout of items to buy: <%= @missing_recipe_foods.count %></h3>
  <h3>Total value of food needed: $<%= @missing_foods_cost %></h3>
</div>
<div>
  <div class='food-header'>
    <h3 class='food-name'>Food</h3>
    <h3 class='food-quantity'>Quantity</h3>
    <h3 class='delete-food'>Price</h3>
  </div>
  <ul class='food-list'>
    <% @missing_recipe_foods.each do |recipe_food, missing_food| %>
      <li class='food-item'>
        <h3 class='food-name'><%= missing_food.name %></h3>
        <h3 class='food-quantity'><%= recipe_food.quantity %> <%= missing_food.measurement_unit %></h3>
        <h3 class='food-price'>$<%= recipe_food.quantity * missing_food.price %></h3>
      </li>
    <% end %>
  </ul>
</div>